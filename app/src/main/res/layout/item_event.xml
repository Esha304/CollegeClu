<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/black"
        android:padding="1dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvDash1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPoster"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:text="- "
        android:textStyle="bold|italic"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPoster"
        android:layout_toRightOf="@id/tvDash1"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:text="name"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tvDash2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:text="- "
        android:textStyle="bold|italic"
        android:textSize="15sp"/>


    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_toRightOf="@id/tvDash2"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:text="monday"
        android:textColor="@color/purple_200"
        android:textStyle="bold|italic"
        android:textSize="15sp"/>

    <ImageView
        android:id="@+id/tvDash3"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_below="@+id/tvDate"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/locationimg"
        android:textSize="15sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDate"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/tvDash3"
        android:onClick="onClick"
        android:clickable="true"
        android:text="location"
        android:textSize="15sp"
        android:textColor="@color/red"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tvDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDate"
        android:layout_toRightOf="@id/tvLocation"
        android:layout_marginTop="3dp"
        android:text=" ."
        android:textStyle="bold|italic"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tvCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDate"
        android:layout_toRightOf="@id/tvDot"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:text="city"
        android:textStyle="bold|italic"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tvComma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDate"
        android:layout_toRightOf="@id/tvCity"
        android:layout_marginTop="3dp"
        android:text=", "
        android:textStyle="bold|italic"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tvState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDate"
        android:layout_toRightOf="@+id/tvComma"
        android:layout_marginTop="3dp"
        android:text="state"
        android:textStyle="bold|italic"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLocation"
        android:background="@drawable/background_border"/>

</RelativeLayout>