<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@color/yellow">

    <ImageView
        android:id="@+id/iconbtn"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_foreground_icon" />

    <TextView
        android:id="@+id/F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="79dp"
        android:layout_marginTop="15dp"
        android:fontFamily="serif"
        android:text="F"
        android:textColor="@color/black"
        android:textSize="90sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconbtn"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/ind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:fontFamily="serif"
        android:text="IND"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@id/F"
        app:layout_constraintTop_toBottomOf="@id/iconbtn" />

    <TextView
        android:id="@+id/F2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="F"
        android:textColor="@color/black"
        android:textSize="90sp"
        android:layout_marginTop="15dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@id/un"
        app:layout_constraintStart_toEndOf="@id/ind"
        app:layout_constraintTop_toBottomOf="@+id/iconbtn"/>

    <TextView
        android:id="@+id/un"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="UN"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:layout_marginTop="65dp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@id/iconbtn"
        app:layout_constraintStart_toEndOf="@id/F2"/>

</androidx.constraintlayout.widget.ConstraintLayout>